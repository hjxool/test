.photo_box {
  height: 100%;
  overflow: auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: repeat(auto-fill, 380rpx);
  grid-auto-flow: 380rpx;
  padding: 0 20rpx;
  grid-gap: 20rpx;
}
.photo_box .img_box {
  border-radius: 20rpx;
  /* margin-top: 20rpx; */
  overflow: hidden;
}
.photo_box .img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.popup {
  width: 80%;
  height: 80%;
}
.popup > .img {
  width: 100%;
  height: 100%;
}

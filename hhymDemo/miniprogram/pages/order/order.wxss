.index {
  height: 100%;
  padding: 20rpx 0;
}
/* 头部检索 */
.head {
  padding: 40rpx 0;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  align-items: center;
  justify-items: center;
}
.head .text {
  font-size: 32rpx;
}
.head .yellow {
  color: #ffa500;
}
/* 内容 */
.body {
  box-sizing: border-box;
  padding: 20rpx;
  /* margin: 0 40rpx 40rpx; */
  background: #fff;
  border-radius: 20rpx;
  overflow: auto;
  align-self: center;
  margin-bottom: 40rpx;
  width: 90%;
}
.body .box {
  padding: 20rpx;
  border-bottom: 1px solid #808080;
}
.body .box > .row_layout:not(:last-child) {
  margin-bottom: 20rpx;
}
.body .box .title {
  font-size: 32rpx;
  flex-shrink: 0;
}
.body .box .text {
  font-size: 28rpx;
  color: #808080;
  overflow: hidden;
}
.body .box .text2{
  color: #ffa500;
}
.body .box .flex_grow {
  word-wrap: break-word;
}
/* 订单按钮 */
.body .foot {
  justify-content: center;
  overflow: hidden;
  transition: all .3s;
}
.body .foot > .btn {
  margin: 0;
}
.body .foot > .btn + .btn {
  margin-left: 40rpx;
}

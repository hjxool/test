page {
  display: grid;
}
view {
  box-sizing: border-box;
}
.iconfont {
  font-size: 120rpx;
  color: #808080;
}
.text {
  font-size: 32rpx;
  color: #808080;
}
.align {
  align-items: center;
}
.center {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.icon1 {
  font-size: 80rpx;
}
.disabled {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 100;
}
#index {
  position: relative;
  box-sizing: border-box;
  border: 2px solid;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 20rpx;
  justify-content: center;
}
/* 第一行 */
.row1 {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: 250rpx;
}
.room1 {
  border: 2px solid #808080;
  height: 80%;
  align-self: end;
}
.room2 {
  border-top: 2px solid #808080;
  border-bottom: 2px solid #808080;
  height: 80%;
  align-self: end;
}
.room3 {
  border: 2px solid #808080;
}
.row1 > .box1 {
  border-top: 2px solid #808080;
}
.room4 {
  height: 200rpx;
  border-bottom: 2px solid #808080;
  border-right: 2px solid #808080;
}
.room5 {
  height: 200rpx;
  border-bottom: 2px solid #808080;
  border-right: 2px solid #808080;
}
/* 第二行 */
.row2 {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: 200rpx;
  margin-bottom: 120rpx;
}
.room6 {
  border: 2px solid #808080;
  border-top: none;
}
.room7 {
  border-bottom: 2px solid #808080;
}
.room8 {
  border: 2px solid #808080;
  border-top: none;
}
/* 第三行 */
.row3 {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: 200rpx;
}
.room9 {
  grid-column-start: 2;
  border: 2px solid #808080;
}
.room10 {
  grid-column-start: 3;
  border: 2px solid #808080;
  border-left: none;
}
/* 第四行 */
.row4 {
  display: flex;
  border: 2px solid #808080;
  height: 208rpx;
}
.room11 {
  border-right: 2px solid #808080;
  flex-grow: 1.2;
}
.room12 {
  border-right: 2px solid #808080;
  flex-grow: 1;
}
.room13 {
  flex-grow: 1;
}
/* 弹窗 */
.popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  /* background: rgba(0, 0, 0, 0.3); */
  z-index: 990;
  animation-name: pop_show;
}
@keyframes pop_show {
  from {
    background: transparent;
  }
  to {
    background: rgba(0, 0, 0, 0.5);
  }
}
.pop_hide {
  animation-name: pop_hide;
}
@keyframes pop_hide {
  from {
    background: rgba(0, 0, 0, 0.5);
  }
  to {
    background: transparent;
  }
}

.index {
  height: 100%;
  overflow: hidden;
}
/* 表单 */
.form {
  overflow-x: hidden;
}
/* 底部按钮 */
.foot {
  padding: 10rpx 40rpx 60rpx;
  border-top: 1px solid rgba(128, 128, 128, 0.2);
  display: flex;
  align-items: center;
  overflow: hidden;
}
.foot > .button {
  flex-grow: 1;
  border-radius: 20rpx;
  font-weight: normal;
  font-size: 36rpx;
  padding: 20rpx 0;
}
.foot > .button + .button {
  margin-left: 40rpx;
}
.foot > .orange {
  background: rgba(255, 165, 0, 0.8);
  color: #fff;
}
.foot > .gray {
  background: rgba(235, 235, 235, 1);
  color: rgba(255, 165, 0, 0.8);
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
}

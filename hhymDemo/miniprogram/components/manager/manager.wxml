<view class="control col_layout" catch:tap="close_pop">
  <!-- 日历和待确认订单 -->
  <view class="head">
    <view class="box1 row_layout" bind:tap="turn_to_page" data-page="calendar">
      <view class="iconfont icon-yuding-active icon icon1"></view>
      <view class="col_layout">
        <view class="tip_num">2</view>
        <view class="title">日历</view>
      </view>
    </view>
    <view class="box1 row_layout" bind:tap="turn_to_page" data-page="confirm">
      <view class="iconfont icon-duigou1 icon icon2"></view>
      <view class="col_layout">
        <view class="tip_num">{{confirm_num}}</view>
        <view class="title">待确认订单</view>
      </view>
    </view>
  </view>
  <!-- 图表 -->
  <view class="flex_grow body col_layout">
    <view class="row_layout" catch:tap="show_titles">
      <view class="title">
        {{echart_title}}

        <view class="select_box" wx:if="{{echarts_select_show}}">
          <view class="text" wx:for="{{titles}}" wx:key="title" catch:tap="change_echart" data-title="{{item.title}}">{{item.title}}</view>
        </view>
      </view>

      <view class="iconfont icon-jiantou_zuoyouqiehuan icon"></view>
    </view>

    <ec-canvas style="display:{{echart_show?'':'none'}};" id="echart" class="flex_grow" canvas-id="bar" ec="{{ec}}"></ec-canvas>
  </view>
  <!-- 功能模块 -->
  <view class="foot flex_shrink">
    <view class="box3 col_layout" wx:for="{{modules}}" wx:key="title" bind:tap="turn_to_page" data-page="{{item.page}}">
      <view class="iconfont {{item.icon}} icon"></view>
      <view class="text">{{item.title}}</view>
    </view>
    <view class="box3 col_layout" bind:tap="open_pop" data-pop="upload_photo">
      <view class="iconfont icon-mn_shangchuantupian_fill icon"></view>
      <view class="text">上传图片</view>
    </view>
  </view>
  <!-- 弹窗 -->
  <view class="popup {{pop_hide?'pop_hide':''}} animation" wx:if="{{pop_show}}">
    <!-- 上传图片 -->
    <view class="upload_photo col_layout">
      <view class="row_layout" style="align-self: center;margin: 20rpx 0 40rpx 0;">
        <view style="font-size: 32rpx;">上传到：</view>
        <radio-group class="row_layout" bindchange="select_photo_save">
          <label class="row_layout" wx:for="{{pop.photo}}" wx:key="{{item.value}}" style="margin-right: 20rpx;">
            <radio value="{{item.value}}" checked="{{item.check}}" />
            <view>{{item.name}}</view>
          </label>
        </radio-group>
      </view>

      <view class="row">
        <button class="button" type="primary">上传图片</button>
        <button class="button" type="default" catch:tap="close_pop2">关闭</button>
      </view>
    </view>
  </view>
</view>